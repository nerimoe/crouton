# Allow tests to not specify all headers.
cc_library(
    name = "all_headers",
    testonly = True,
    hdrs = glob(include = ["*.h"]),
    textual_hdrs = glob(include = ["*.c"]),  # Allow including sources
    visibility = [
        "//cras/src/tests:__pkg__",
    ],
)

# Allow tests to use sources directly
exports_files(
    glob(include = [
        "*.c",
    ]),
    visibility = [
        "//cras/src/tests:__pkg__",
    ],
)

# For distribution
exports_files(
    glob(
        include = ["*.h"],
        exclude = [
            "cras_dbus_bindings.h",
            "cras_version.h",
        ],
    ),
    visibility = ["//dist:__pkg__"],
)
