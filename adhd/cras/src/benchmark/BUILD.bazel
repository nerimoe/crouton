load("//:utils.bzl", "require_config")

cc_binary(
    name = "cras_bench",
    visibility = ["//dist:__pkg__"],
    deps = [
        ":benchmark_util",
        ":default_benchmarks",
        "@com_github_google_benchmark//:benchmark_main",
    ] + select({
        "//:apm_build": [":apm_benchmark"],
        "//conditions:default": [],
    }) + select({
        "//:hw_dependency_build": ["alsa_benchmark"],
        "//conditions:default": [],
    }) + select({
        "//:ml_build": ["am_benchmark"],
        "//conditions:default": [],
    }),
)

cc_library(
    name = "default_benchmarks",
    srcs = [
        "dsp_benchmark.cc",
        "mixer_ops_benchmark.cc",
    ],
    deps = [
        ":benchmark_util",
        "//cras/src/dsp:drc",
        "//cras/src/dsp:dsp_util",
        "//cras/src/dsp:eq2",
        "//cras/src/server:cras_mix",
        "@com_github_google_benchmark//:benchmark",
    ],
    alwayslink = True,
)

cc_library(
    name = "am_benchmark",
    srcs = ["am_benchmark.cc"],
    target_compatible_with = require_config("//:ml_build"),
    deps = [
        ":benchmark_util",
        "//cras/src/dsp:am",
        "@com_github_google_benchmark//:benchmark",
    ],
    alwayslink = True,
)

cc_library(
    name = "apm_benchmark",
    srcs = [
        "apm_benchmark.cc",
    ],
    linkopts = [
        "-lwebrtc_apm",
    ],
    target_compatible_with = require_config("//:apm_build"),
    deps = [
        ":benchmark_util",
        "//cras/src/dsp:dsp_util",
        "@com_github_google_benchmark//:benchmark",
    ],
    alwayslink = True,
)

cc_library(
    name = "alsa_benchmark",
    srcs = [
        "alsa_benchmark.cc",
    ],
    linkopts = [
        "-lasound",
        "-lcros_config",
    ],
    target_compatible_with = require_config("//:hw_dependency_build"),
    deps = [
        ":benchmark_util",
        "//cras/src/libcras:cras_client",
        "//cras/src/server:cras_alsa_helpers",
        "//cras/src/server:cras_alsa_ucm",
        "//cras/src/server:cras_mix",
        "@com_github_google_benchmark//:benchmark",
    ] + select({
        # Guard pkg_config behind hw_dependency_build so bazel does not attempt
        # to run pkg-config in the analysis phase for platforms missing the
        # dependencies.
        "//:hw_dependency_build": [
            "@pkg_config//libchrome",
            "@pkg_config//libcros_config",
        ],
        "//conditions:default": [],
    }),
    alwayslink = True,
)

cc_library(
    name = "benchmark_util",
    srcs = ["benchmark_util.cc"],
    hdrs = ["benchmark_util.h"],
)
