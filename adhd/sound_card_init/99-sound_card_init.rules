SUBSYSTEM!="sound", GOTO="sci_end"
ACTION!="change", GOTO="sci_end"
KERNEL!="card*", GOTO="sci_end"

GOTO="sci_action"

LABEL="sci_action"
RUN+="/sbin/initctl start sound_card_init SOUND_CARD_ID=$attr{id}"
LABEL="sci_end"
